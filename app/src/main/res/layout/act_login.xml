<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@mipmap/zjbg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/goback"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:paddingLeft="13dp"
                android:paddingRight="13dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="码上活动助手"
                android:textColor="#fff"
                android:textSize="19sp" />
        </RelativeLayout>

        <TextView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=" 您好！"
            android:textColor="#ffffffff"
            android:textSize="27sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:background="@drawable/shape_bg_12"
            android:orientation="vertical"
            android:paddingBottom="50dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/zjtu"
        android:layout_width="145dp"
        android:layout_height="97dp"
  />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="欢迎登录"
        android:gravity="center_horizontal"
        android:textColor="#ff030303"
        android:textSize="18sp"
        android:textStyle="bold"
        />
</RelativeLayout>


            <EditText
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_bg_f3f4f8_10"
                android:drawableLeft="@mipmap/zh"
                android:drawablePadding="5dp"
                android:hint="请输入签到点设备码"
                android:maxLines="1"
                android:padding="11dp"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textSize="16sp"
                android:text="262B195"/>
<!--            262B195-->
<!--            261B194-->
<!--            260B193-->
<!--            259B192-->
<!--            258B191-->
<!--            257B190-->
<!--            256B189-->
<!--            255B188-->

            <EditText
                android:visibility="gone"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_bg_f3f4f8_10"
                android:drawableLeft="@mipmap/mm"
                android:drawablePadding="5dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="11dp"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textSize="16sp" />

            <TextView
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_bg_ff3974f6_10"
                android:gravity="center"
                android:text="登 录"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="码上会议"
                android:textColor="#ff999999"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="码上互动技术支持"
                android:textColor="#ff999999"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>