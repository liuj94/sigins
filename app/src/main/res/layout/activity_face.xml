<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".face.FaceActivity">

    <com.bifan.detectlib.FaceDetectView
        android:id="@+id/faceDetectView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#000000"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启检测"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/jieguo"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            android:gravity="center"
            android:padding="30dp"
            android:orientation="vertical"
            android:background="@drawable/shape_3974f6_7">
            <ImageView
                android:id="@+id/stateIv"
                android:src="@mipmap/qdcgicon"
                android:layout_width="94dp"
                android:layout_height="94dp"/>
            <TextView
                android:id="@+id/stateTv"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到成功"
                android:textColor="#ffffffff"
                android:textSize="27sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/jgsb"
        android:padding="25dp"
        android:background="#171E2E"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
android:id="@+id/sbtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查无信息"
            android:textColor="#ffffff"
            android:textSize="27sp"
            />
    </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/jgcg"
                android:padding="18dp"
                android:background="#171E2E"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.zjsignin.view.ImageViewPlus
                    android:id="@+id/img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ov_999"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="27sp"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="18sp"
                        />
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>
</RelativeLayout>